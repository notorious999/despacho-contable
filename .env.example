# Configuración de Entorno para Despacho Contable
# Copia este archivo como .env y modifica los valores según tu entorno

# Entorno de la aplicación (development, production)
APP_ENV=development

# URL de la aplicación (en producción cambiar por tu dominio)
APP_URL=http://localhost/despacho-contable

# Configuración de Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=despacho_contable

# RFC de tu empresa (OBLIGATORIO cambiar en producción)
RFC_PROPIO=XAXX010101000

# Configuración de Seguridad (recomendado generar claves únicas)
SESSION_SECRET=tu_clave_secreta_aqui
JWT_SECRET=tu_jwt_secreto_aqui

# Configuración de Email (opcional, para notificaciones)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password
MAIL_FROM=noreply@tuempresa.com

# Configuración de Logs
LOG_LEVEL=info
LOG_MAX_FILES=30

# Configuración de Archivos
UPLOAD_MAX_SIZE=50M
UPLOAD_ALLOWED_TYPES=xml,pdf,jpg,jpeg,png